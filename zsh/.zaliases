#!/bin/sh

# settings for common commands
alias cp="cp -uv"
alias mv="mv -uv"
alias rm="rm -rv"
alias mkd="mkdir -pv"
alias ls="eza --icons --tree --level=1"
alias lf="lfcd"
alias locate="plocate"
alias trp="trash-put"
alias trr="trash-restore"
alias cat="ccat"
alias grep="grep --color=always"
alias tree="eza --icons --tree"
alias top="btop"

# application aliases
alias v="$EDITOR"
alias nvim="$EDITOR"
alias code="codium"
alias ytd="yt-dlp --no-mtime"

# aliases to clean up home directory
alias svn="svn --config-dir $XDG_CONFIG_HOME/subversion"
alias wget=wget --hsts-file="$XDG_DATA_HOME/wget-hsts"

# git aliases
alias gst="git status"
alias gc="git commit"
alias ga="git add"
alias gpl="git pull"
alias gpom="git pull origin main"
alias gpu="git push"
alias gpuom="git push origin main"
alias gd="git diff"
alias gch="git checkout"
alias gnb="git checkout -b"
alias gac="git add . && git commit"
alias grs="git restore --staged ."
alias gre="git restore"
alias gr="git remote"
alias gcl="git clone"
alias glg="git log --decorate=full --graph --abbrev-commit"
alias gt="git ls-tree -r main --name-only"
alias grm="git remote"
alias gb="git branch"
alias gf="git fetch"
